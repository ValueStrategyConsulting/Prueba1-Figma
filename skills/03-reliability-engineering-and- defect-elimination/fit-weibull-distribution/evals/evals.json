  },
  {
    "id": "weibull-eval-02",
    "name": "Insufficient data falls back to defaults",
    "input": {
      "failure_intervals": [120, 180],
      "current_age_days": 100,
      "description": "Only 2 data points - should use defaults"
    },
    "expected": {
      "beta": 1.0,
      "eta": 180.0,
      "r_squared": 0.0,
      "failure_pattern": "E_RANDOM"
    },
    "assertions": [
      "With < 3 points, beta defaults to 1.0",
      "eta defaults to max of intervals (180)",
      "r_squared is 0.0 (no fit)",
      "Agent notes insufficient sample size"
    ]
  },
