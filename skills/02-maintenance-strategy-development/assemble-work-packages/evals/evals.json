  {
    "test_id": "WP-003",
    "name": "Missing elements default to MISSING status",
    "description": "Elements not provided in element_data should appear as MISSING",
    "input": {
      "package_id": "WP-CRU-002",
      "name": "CRUSHER LINER REPLACE",
      "element_data": [
        {
          "element_type": "WORK_INSTRUCTION",
          "status": "READY"
        },
        {
          "element_type": "SAFETY_PLAN",
          "status": "DRAFT"
        }
      ]
    },
    "expected": {
      "ready_count": 1,
      "missing_elements": [
        "RESOURCE_PLAN",
        "MATERIALS_LIST",
        "TOOLS_LIST",
        "QUALITY_CRITERIA",
        "DRAWINGS"
      ],
      "overall_readiness": "PARTIAL"
    }
  },
  {
