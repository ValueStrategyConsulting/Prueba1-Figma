      "element_data": [
        {
          "element_type": "WORK_INSTRUCTION",
          "status": "READY"
        },
        {
          "element_type": "SAFETY_PLAN",
          "status": "EXPIRED"
        },
        {
          "element_type": "RESOURCE_PLAN",
          "status": "READY"
        },
        {
          "element_type": "MATERIALS_LIST",
          "status": "READY"
        },
        {
          "element_type": "TOOLS_LIST",
          "status": "READY"
        },
        {
          "element_type": "QUALITY_CRITERIA",
          "status": "READY"
        },
        {
          "element_type": "DRAWINGS",
          "status": "READY"
        }
