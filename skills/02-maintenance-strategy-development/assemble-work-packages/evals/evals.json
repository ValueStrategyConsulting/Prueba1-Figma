    "description": "When all 7 mandatory elements are READY, overall readiness should be READY",
    "input": {
      "package_id": "WP-SAG-001",
      "name": "SAG MILL LINER CHANGE",
      "element_data": [
        {
          "element_type": "WORK_INSTRUCTION",
          "status": "READY"
        },
        {
          "element_type": "SAFETY_PLAN",
          "status": "READY"
        },
        {
          "element_type": "RESOURCE_PLAN",
          "status": "READY"
        },
        {
          "element_type": "MATERIALS_LIST",
          "status": "READY"
        },
        {
          "element_type": "TOOLS_LIST",
          "status": "READY"
        },
        {
          "element_type": "QUALITY_CRITERIA",
          "status": "READY"
        },
        {
          "element_type": "DRAWINGS",
          "status": "READY"
        }
      ]
    },
    "expected": {
      "ready_count": 7,
      "readiness_pct": 100.0,
      "overall_readiness": "READY"
    }
  },
